    <script>
const flashcards = [
    { visual: "üîä", question: "Which cables carry audio?", answer: "HDMI + DisplayPort ONLY", details: "<span class='badge badge-audio'>HDMI ‚úÖ</span><span class='badge badge-audio'>DisplayPort ‚úÖ</span><br><span class='badge badge-no-audio'>DVI ‚ùå</span><span class='badge badge-no-audio'>VGA ‚ùå</span>" },
    { visual: "üîµ", question: "What cable has a BLUE connector?", answer: "VGA (instant recognition!)", details: "BLUE = VGA<br>15 pins (3 rows of 5)<br>Analog, video only" },
    { visual: "üì∫", question: "What does HDMI carry?", answer: "Video + Audio", details: "Consumer standard<br>Small, flat, no clip<br>TVs, consoles, laptops" },
    { visual: "üñ•Ô∏è", question: "What does DisplayPort carry?", answer: "Video + Audio + MST", details: "Professional/Gaming<br>Beveled corner + clip<br>Multi-monitor support" },
    { visual: "üî≤", question: "What does DVI carry?", answer: "Video ONLY (NO audio!)", details: "<span class='badge badge-no-audio'>NO AUDIO ‚ùå</span><br>Large, pins, screws<br>‚ö†Ô∏è EXAM TRAP!" },
    { visual: "üñ•Ô∏èüñ•Ô∏èüñ•Ô∏è", question: "Multi-monitor from one port?", answer: "DisplayPort MST", details: "MST = Multi-Stream Transport<br>Daisy-chain displays<br>ONLY DisplayPort!" },
    { visual: "üéÆ", question: "Best cable for high-refresh gaming?", answer: "DisplayPort", details: "144Hz, 240Hz support<br>G-Sync / FreeSync<br>No screen tearing" },
    { visual: "üè†", question: "Best cable for home entertainment?", answer: "HDMI", details: "TV + console<br>Universal<br>Audio included" },
    { visual: "üî≤", question: "DVI types?", answer: "D, A, I", details: "DVI-D = Digital<br>DVI-A = Analog<br>DVI-I = Integrated (both)" },
    { visual: "üìä", question: "Quality ranking (best to worst)?", answer: "DisplayPort > HDMI > DVI > VGA", details: "DisplayPort = highest<br>VGA = lowest (analog)<br>Digital > Analog" },
    { visual: "üîµ", question: "What signal type is VGA?", answer: "Analog (lowest quality)", details: "Only analog cable<br>Signal degrades<br>Max ~1920√ó1080" },
    { visual: "‚ö°", question: "Highest bandwidth cable?", answer: "DisplayPort", details: "Best performance<br>4K @ 120Hz+<br>8K support" },
    { visual: "üìΩÔ∏è", question: "Old projector with blue port?", answer: "VGA cable", details: "Blue = VGA<br>Legacy equipment<br>Common in conference rooms" },
    { visual: "‚ö†Ô∏è", question: "User has no audio from monitor. Using DVI. Why?", answer: "DVI has NO audio support!", details: "DVI = Video only<br>Need separate audio cable<br>Common exam trap!" },
    { visual: "üëÅÔ∏è", question: "How to recognize cables quickly?", answer: "Size + color + features", details: "HDMI = small, flat<br>DisplayPort = beveled + clip<br>DVI = large, pins<br>VGA = BLUE!" }
];

let currentCardIndex = 0;
let knownCards = new Set();
const totalCards = flashcards.length;

const flashcard = document.getElementById('flashcard');
const cardVisual = document.getElementById('cardVisual');
const cardQuestion = document.getElementById('cardQuestion');
const cardAnswer = document.getElementById('cardAnswer');
const cardDetails = document.getElementById('cardDetails');
const currentCardSpan = document.getElementById('currentCard');
const totalCardsDisplay = document.getElementById('totalCardsDisplay');
const knownCount = document.getElementById('knownCount');
const progressBar = document.getElementById('progressBar');
const prevBtn = document.getElementById('prevBtn');
const nextBtn = document.getElementById('nextBtn');
const knowItBtn = document.getElementById('knowItBtn');
const stillLearningBtn = document.getElementById('stillLearningBtn');

totalCardsDisplay.textContent = totalCards;
document.getElementById('totalCards').textContent = totalCards;
loadCard(0);
updateProgress();

function loadCard(index) {
    const card = flashcards[index];
    cardVisual.textContent = card.visual;
    cardQuestion.textContent = card.question;
    cardAnswer.textContent = card.answer;
    cardDetails.innerHTML = card.details;
    currentCardSpan.textContent = index + 1;
    flashcard.classList.remove('flipped');
    prevBtn.disabled = index === 0;
    nextBtn.disabled = index === totalCards - 1;
    knowItBtn.textContent = knownCards.has(index) ? '‚úÖ Known!' : '‚úÖ Know It!';
    knowItBtn.style.background = knownCards.has(index) ? '#4CAF50' : 'white';
    knowItBtn.style.color = knownCards.has(index) ? 'white' : '#333';
}

flashcard.addEventListener('click', () => flashcard.classList.toggle('flipped'));
prevBtn.addEventListener('click', () => { if (currentCardIndex > 0) { currentCardIndex--; loadCard(currentCardIndex); }});
nextBtn.addEventListener('click', () => { if (currentCardIndex < totalCards - 1) { currentCardIndex++; loadCard(currentCardIndex); }});

knowItBtn.addEventListener('click', () => {
    knownCards.has(currentCardIndex) ? knownCards.delete(currentCardIndex) : knownCards.add(currentCardIndex);
    updateProgress();
    loadCard(currentCardIndex);
    if (currentCardIndex < totalCards - 1) setTimeout(() => { currentCardIndex++; loadCard(currentCardIndex); }, 500);
});

stillLearningBtn.addEventListener('click', () => { if (currentCardIndex < totalCards - 1) { currentCardIndex++; loadCard(currentCardIndex); }});

function updateProgress() {
    const known = knownCards.size;
    const percentage = Math.round((known / totalCards) * 100);
    knownCount.textContent = known;
    progressBar.style.width = percentage + '%';
    progressBar.textContent = percentage + '%';
}

document.addEventListener('keydown', (e) => {
    if (e.key === ' ' || e.key === 'Enter') { e.preventDefault(); flashcard.classList.toggle('flipped'); }
    else if (e.key === 'ArrowLeft' && currentCardIndex > 0) { currentCardIndex--; loadCard(currentCardIndex); }
    else if (e.key === 'ArrowRight' && currentCardIndex < totalCards - 1) { currentCardIndex++; loadCard(currentCardIndex); }
    else if (e.key === 'k' || e.key === 'K') knowItBtn.click();
});
    </script>
</body>
